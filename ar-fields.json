{
  "type": "object",
  "title": "Basic Information About You",
  "properties": {
    "full_name": {
    "type": "string",
    "title": "Full Name of Voter",
    "br_required": true
    },
    "birthday": {
      "type": "string",
      "title": "Voter's Date of Birth",
      "format": "date",
      "br_required": true
    },
    "reg_address": {
      "type": "string",
      "title": "Voting Residence Street Address",
            "br_required": true
   //will need to combine these 3 fields (city, state, zip) into 1 to fit the form//
    },
    "reg_city": {
      "type": "string",
      "title": "City or Town",
      "br_required": true
    },
    "reg_state": {
      "type": "string",
      "title": "Voing Residence State",
      "br_required": true
    },
    "reg_zipcode": {
      "type": "string",
      "title": "Voting Residence Zip Code",
      "format": "zipcode"
      "br_required": true
    },
    "mailing_info_title": {
      "type": "string",
      "title": "Mailing Address"
    },
    "mailing_address_description": {
      "type": "hidden-field",
      "title": "Address where the Absentee Ballot will be mailed"
    },
    "mail_info": {
      "type": "object",
      "title": ""
      "properties": {
         "mail_address": {
            "type": "string",
            "title": "Mailing Street Address",
            "br_required": true
            },
    //will need to combine city and state into the same field to fit the form//
            "mail_city": {
              "type": "string",
              "title": "Mailing City",
              "br_required": true
            },
            "mail_state": {
              "type": "string",
              "title": "Mailing State",
              "br_required": true
            },
            "mail_zipcode": {
              "type": "string",
              "title": "Mailing Zip Code",
              "format": "zipcode",
              "br_required": true
            },
          },
        },
        "today_date": {
          "type": "string",
          "title": "Today's Date",
          "format": "date",
          "br_required": true
        },
        "clerk_address": {
          "type": "string",
          "title": "County Clerk's Street Address",
          "br_required": true
        },
    //need to be split from city_state field into 2//
        "clerk_address_city_state": {
           "type": "string",
           "title": "County Clerk's Address City, State",
           "br_required": true
        },
        "clerk_address_zip": {
           "type": "string",
           "title": "County Clerk's Address Zip Code",
           "format": "zipcode",
           "br_required": true
        },
        "residence_title": {
            "type": "string",
            "title": "I RESIDE (check one of the following)",
            "format": "title"
        },
        "registered_county_checkbox": {
            "type": "boolean",
            "title": "within the county in which I am registered to vote",
            "format": "checkbox"
        },
        "outside_county_check_checkbox": {
            "type": "boolean",
            "title": "outside the county in which I am registered to vote",
            "format": "checkbox"
        },
        "ballot_form_title": {
            "type": "string",
            "title": "I will receive my ballot by (check one of the following)",
            "format": "title"
        },
        "ballot_pickup": {
            "type": "boolean",
            "title": "Coming to the office of the county clerk by the time the county clerk's office regularly closes on the day before the election",
            "format": "checkbox"
        }
    }
}
